{
  "description": "Linx",
  "manifest_version": 2,
  "name": "Linx",
  "version": "0.1",
  "homepage_url": "https://github.com/roxit/linx",
  "icons": {
    "48": "icons/48.png"
  },
  "browser_action": {
    "default_icon": "icons/48.jpg",
    "default_title": "Linx",
    "default_popup": "popup/linx.html",
    "browser_style": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "copy-link": {
      "suggested_key": {
        "default": "Alt+1"
      }
    },
    "copy-text": {
      "suggested_key": {
        "default": "Alt+2"
      }
    }
  },
  "permissions": [
    "clipboardWrite",
    "tabs"
  ]
}
